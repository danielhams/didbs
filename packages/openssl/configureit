#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=$DIDBS_CC
# Attempt to fix some floating point precision issues with tests
CFLAGS="$DIDBS_ARCH_CFLAGS -O1"
LDFLAGS="$DIDBS_ARCH_LDFLAGS"
export CC CFLAGS LDFLAGS
cd $BUILDDIR || exit -1
./Configure --prefix=$INSTALLDIR irix-mips3-cc threads shared $EXTRAARGS || exit -1
exit 0
