#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=$DIDS_CC
CFLAGS="$DIDBS_ARCH_CFLAGS -O1"
LDFLAGS="$DIDBS_ARCH_LDFLAGS"
#SHELL="$INSTALLDIR/bin/ksh"
#CONFIG_SHELL="$INSTALLDIR/bin/ksh"
#PERL="$INSTALLDIR/bin/perl"
#export CC CFLAGS LDFLAGS
PATH=$EXTRAARGS/bin:$PATH
LD_LIBRARY_PATH=$EXTRAARGS/lib:$PATH
export CC CFLAGS LDFLAGS SHELL CONFIG_SHELL PERL PATH LD_LIBRARY_PATH
cd $BUILDDIR || exit 1
./configure --prefix=$INSTALLDIR || exit 1
exit 0
