#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=$DIDBS_CC
CXX=$DIDBS_CXX
CPPFLAGS="-I$INSTALLDIR/include"
CFLAGS="$DIDBS_ARCH_CFLAGS -O1"
CXXFLAGS="$DIDBS_ARCH_CFLAGS -O1"
#CFLAGS="$DIDBS_ARCH_CFLAGS -O2"
#CXXFLAGS="$DIDBS_ARCH_CFLAGS -O2"
LDFLAGS="$DIDBS_ARCH_LDFLAGS -L$INSTALLDIR/lib -lintl"
SHELL="$INSTALLDIR/bin/bash"
CONFIG_SHELL="$INSTALLDIR/bin/bash"
SHELL_PATH="$INSTALLDIR/bin/bash"
PERL="$INSTALLDIR/bin/perl"
PERL_PATH="$INSTALLDIR/bin/perl"
export CC CXX CPPFLAGS CFLAGS CXXFLAGS LDFLAGS SHELL CONFIG_SHELL SHELL_PATH PERL PERL_PATH
cd $BUILDDIR || exit -1
##cd ../gold || exit -1
##autoreconf || exit -1
#cd binutils || exit -1
#autoconf || exit -1
#cd ../bfd || exit -1
#autoconf || exit -1
#cd ../gas || exit -1
#autoconf || exit -1
cd libiberty || exit -1
autoreconf || exit -1
#cd ../opcodes || exit -1
#autoconf || exit -1
#cd ../ld || exit -1
#autoconf || exit -1
#cd ../gprof || exit -1
#autoconf || exit -1
#cd ../intl || exit -1
#autoconf || exit -1
#cd ../etc || exit -1
#autoconf || exit -1
cd $BUILDDIR || exit -1
autoreconf || exit -1
./configure --prefix=$INSTALLDIR --enable-werror=no || exit -1
exit 0
