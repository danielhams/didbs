#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=c99
CFLAGS="$DIDBS_ARCH_CFLAGS -O3 -I$INSTALLDIR/include"
LDFLAGS="$DIDBS_ARCH_LDFLAGS -L$INSTALLDIR/lib"
LD_LIBRARY_PATH="$INSTALLDIR/lib"
export CC CFLAGS LDFLAGS LD_LIBRARY_PATH
cd $BUILDDIR || exit -1
./configure --prefix=$INSTALLDIR --libdir=$INSTALLDIR/lib $EXTRAARGS || exit -1
exit 0
