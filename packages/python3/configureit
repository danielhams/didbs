#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit -1
autoreconf || exit -1
ac_cv_header_uuid_h=no ac_cv_header_uuid_uuid_h=no ./configure --enable-shared --prefix=$INSTALLDIR --with-system-ffi --with-system-expat --with-ensurepip=yes || exit -1
exit 0
