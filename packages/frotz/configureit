#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit -1
# Nothing to do
#$BUILDDIR/configure --prefix=$INSTALLDIR --disable-silent-rules || exit -1
# Rewrite installation lib directory
LIBDIR_REGEXP="s|INSTALLDIR\)/lib|INSTALLDIR\)/$DIDBS_LIBDIR|g"
perl -pi -e "$LIBDIR_REGEXP" Makefile || exit -1

exit 0
