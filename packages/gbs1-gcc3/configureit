#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit -1
cd ..
mkdir gcc-build
cd gcc-build
#$BUILDDIR/configure --prefix=$GBS1_INSTALL_DIR --disable-silent-rules --disable-nls --disable-multilib --enable-obsolete --enable-languages=c,c++ --with-gnu-ld --with-ld=$GBS0_INSTALL_DIR/bin/ld --with-gnu-as --with-as=$GBS0_INSTALL_DIR/bin/as --with-gmp=$INSTALLDIR --with-mpfr=$INSTALLDIR || exit -1
$BUILDDIR/configure --prefix=$GBS1_INSTALL_DIR --disable-silent-rules --disable-nls --disable-multilib --enable-obsolete --enable-languages=c,c++ --with-gnu-ld --with-ld=$GBS0_INSTALL_DIR/bin/ld --with-gnu-as --with-as=$GBS0_INSTALL_DIR/bin/as || exit -1
exit 0
