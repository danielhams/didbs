#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit -1
cd ..
mkdir gcc-build
cd gcc-build
$BUILDDIR/configure --prefix=$GBS1_INSTALL_DIR --disable-silent-rules --disable-nls --disable-multilib --enable-obsolete --enable-languages=c,c++ --with-gnu-ld --with-ld=$GBS0_LD --with-gnu-as --with-as=$GBS0_AS || exit -1
exit 0
