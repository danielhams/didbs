#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=c99
CFLAGS="$DIDBS_ARCH_CFLAGS -O3"
LDFLAGS="$DIDBS_ARCH_LDFLAGS"
LD_LIBRARY_PATH="$INSTALLDIR/lib"
PKG_CONFIG_PATH="$INSTALLDIR/lib/pkgconfig"
export CC CFLAGS LDFLAGS LD_LIBRARY_PATH PKG_CONFIG_PATH
cd $BUILDDIR || exit -1
./configure --prefix=$INSTALLDIR $EXTRAARGS || exit -1
exit 0
