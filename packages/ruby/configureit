#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=$DIDBS_CC
CFLAGS="$DIDBS_ARCH_CFLAGS -O1 -I$INSTALLDIR/include"
CXXFLAGS="$DIDBS_ARCH_CFLAGS -O1 -I$INSTALLDIR/include"
LDFLAGS="$DIDBS_ARCH_LDFLAGS -L$INSTALLDIR/lib"
YACC=/usr/bin/yacc
export CC CFLAGS CXXFLAGS LDFLAGS YACC
cd $BUILDDIR || exit -1
autoreconf || exit -1
./configure --prefix=$INSTALLDIR --disable-silent-rules || exit -1
exit 0
