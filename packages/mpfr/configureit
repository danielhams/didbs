#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=$DIDBS_CC
CXX=$DIDBS_CXX
CPPFLAGS="-I$INSTALLDIR/include"
#CFLAGS="$DIDBS_ARCH_CFLAGS -O2 -I$INSTALLDIR/include"
#CXXFLAGS="$DIDBS_ARCH_CFLAGS -O2 -I$INSTALLDIR/include"
CFLAGS="$DIDBS_ARCH_CFLAGS -O2"
CXXFLAGS="$DIDBS_ARCH_CFLAGS -O2"
LDFLAGS="$DIDBS_ARCH_LDFLAGS -L$INSTALLDIR/lib"
export CC CXX CPPFLAGS CFLAGS CXXFLAGS LDFLAGS
cd $BUILDDIR || exit -1
./configure --prefix=$INSTALLDIR || exit -1
exit 0
