#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR/pkgs/sqlite3.25.3 || exit -1
autoreconf || exit -1
cd $BUILDDIR/unix || exit -1
autoreconf || exit -1
export tcl_cv_cc_visibility_hidden=no
./configure tcl_cv_cc_visibility_hidden=no --prefix=$INSTALLDIR --disable-silent-rules --with-system-sqlite || exit -1
exit 0
