#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=c99
CFLAGS="$DIDBS_ARCH_CFLAGS -O1 -I$INSTALLDIR/include"
LDFLAGS="$DIDBS_ARCH_LDFLAGS -L$INSTALLDIR/lib"
PATH=$EXTRAARGS/bin:$INSTALLDIR/bin:$PATH
LD_LIBRARY_PATH=$EXTRAARGS/lib:$INSTALLDIR/lib:$PATH
PKG_CONFIG_PATH="$INSTALLDIR/lib/pkgconfig"
export CC CFLAGS LDFLAGS LD_LIBRARY_PATH PKG_CONFIG_PATH
cd $BUILDDIR || exit -1
./configure --prefix=$INSTALLDIR --disable-silent-rules || exit -1
exit 0
