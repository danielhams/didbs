#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit -1
cd ..
mkdir gdb-build
cd gdb-build
$BUILDDIR/configure --prefix=$GBS5_INSTALL_DIR --enable-werror=no --disable-nls --disable-iconv --disable-gprof --with-system-zlib --with-curses=ncurses|| exit -1

exit 0
