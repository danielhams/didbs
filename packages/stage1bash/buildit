#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
PATH=$EXTRAARGS/bin:$INSTALLDIR/bin:$PATH
LD_LIBRARYN32_PATH="$EXTRAARGS/lib:$INSTALLDIR/lib"
PKG_CONFIG_PATH="$INSTALLDIR/lib/pkgconfig"
export PATH LD_LIBRARYN32_PATH PKG_CONFIG_PATH
cd $BUILDDIR || exit -1
#make -j $DIDBS_JOBS || exit -1
# Only one job otherwise race problems during the build
make -j 1 || exit -1
exit 0
