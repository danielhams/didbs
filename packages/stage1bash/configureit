#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=$DIDBS_CC
CFLAGS="$DIDBS_ARCH_CFLAGS -O1"
LDFLAGS="$DIDBS_ARCH_LDFLAGS"
PATH=$EXTRAARGS/bin:$INSTALLDIR/bin:$PATH
LD_LIBRARY_PATH="$EXTRAARGS/lib:$INSTALLDIR/lib"
PKG_CONFIG_PATH="$INSTALLDIR/lib/pkgconfig"
export CC CFLAGS LDFLAGS LD_LIBRARY_PATH PKG_CONFIG_PATH
cd $BUILDDIR || exit -1
./configure --prefix=$INSTALLDIR || exit -1
exit 0
