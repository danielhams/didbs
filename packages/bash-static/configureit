#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit -1
mkdir ../build-bash
cd ../build-bash
if [ "ne$DIDBS_CC" == "negcc" ]; then
    # gcc not happy building a static one yet
    $BUILDDIR/configure --prefix=$INSTALLDIR --libdir=$INSTALLDIR/$DIDBS_LIBDIR --enable-readline --with-installed-readline --with-bash-malloc --with-curses --disable-nls --enable-job-control || exit -1
else
    # static build works with c99
    $BUILDDIR/configure --prefix=$INSTALLDIR --libdir=$INSTALLDIR/$DIDBS_LIBDIR --enable-readline --with-installed-readline --with-bash-malloc --with-curses --disable-nls --enable-job-control || exit -1
fi
exit 0
