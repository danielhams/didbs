#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=c99
CXX=CC
CFLAGS="$DIDBS_ARCH_CFLAGS -I$INSTALLDIR/include -I$INSTALLDIR/include/nettle"
LDFLAGS="$DIDBS_ARCH_LDFLAGS -L$INSTALLDIR/lib"
PATH=$EXTRAARGS/bin:$INSTALLDIR/bin:$PATH
LD_LIBRARY_PATH=$EXTRAARGS/lib:$INSTALLDIR/lib:$PATH
export CC CXX CFLAGS LDFLAGS LD_LIBRARY_PATH PKG_CONFIG_PATH
cd $BUILDDIR || exit -1
./Configure -des -Dprefix=$INSTALLDIR -Dusethreads || exit -1
exit 0
