#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=$DIDBS_CC
BIGFILES="-D_FILE_OFFSET_BITS=64"
CFLAGS="$DIDBS_ARCH_CFLAGS -O1 -Wall $BIGFILES"
LDFLAGS="$DIDBS_ARCH_LDFLAGS"
export CC CFLAGS LDFLAGS BIGFILES
cd $BUILDDIR || exit -1
make install PREFIX=$INSTALLDIR || exit -1
exit 0
