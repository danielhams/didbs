#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=$DIDBS_CC
CFLAGS="$DIDBS_ARCH_CFLAGS -O1 -I/usr/Motif-2.1/include -I$INSTALLDIR/include"
LDFLAGS="$DIDBS_ARCH_LDFLAGS -L$INSTALLDIR/lib -lXpm -ljpeg -ltiff"
LD_LIBRARYN32_PATH="$INSTALLDIR/lib"
PKG_CONFIG_PATH="$INSTALLDIR/lib/pkgconfig"
export CC CFLAGS LDFLAGS LD_LIBRARYN32_PATH PKG_CONFIG_PATH
cd $BUILDDIR || exit -1
# Can't get the version to use newer png,jpeg,tiff
#./configure --with-x-toolkit=motif --without-gif --prefix=$INSTALLDIR || exit -1
./configure --with-x-toolkit=motif --without-gif --without-xpm --without-jpeg --without-png --prefix=$INSTALLDIR || exit -1
exit 0
