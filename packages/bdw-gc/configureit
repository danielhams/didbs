#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit -1
mkdir ../gc-build
cd ../gc-build
$BUILDDIR/configure --prefix=$INSTALLDIR --with-libatomic-ops --disable-silent-rules --enable-gc-debug --enable-gc-assertions || exit -1
exit 0
