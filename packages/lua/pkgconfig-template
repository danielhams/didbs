V=5.3
R=5.3.5

prefix=DIDBS_INSTALLDIR
INSTALL_BIN=${prefix}/bin
INSTALL_INC=${prefix}/include
INSTALL_LIB=${prefix}/DIDBS_LIBDIR
INSTALL_MAN=${prefix}/man/man1
INSTALL_LMOD=${prefix}/share/lua/${V}
INSTALL_CMOD=${prefix}/DIDBS_LIBDIR/lua/${V}
exec_prefix=${prefix}
libdir=${exec_prefix}/DIDBS_LIBDIR
includedir=${prefix}/include

Name: Lua
Description: An Extensible Extension Language
Version: ${R}
Requires: 
Libs: -L${libdir} -llua -lm
Cflags: -I${includedir}
