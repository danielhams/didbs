#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=$DIDBS_CC
CXX=$DIDBS_CXX
CFLAGS="$DIDBS_ARCH_CFLAGS -O1"
CXXFLAGS="DIDBS_ARCH_CXXFLAGS -O1"
LDFLAGS="$DIDBS_ARCH_LDFLAGS"
export CC CXX CFLAGS CXXFLAGS LDFLAGS
cd $BUILDDIR || exit -1
# For 1_53-0
#./b2 -j $DIDBS_JOBS --link=shared --threading=multi --with-thread --with-system --with-chrono --with-program_options --prefix=$INSTALLDIR install || exit -1

# For 1_33_1
./make install
exit 0
