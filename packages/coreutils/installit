#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
SHELL=$INSTALLDIR/bin/bash
CONFIG_SHELL=$INSTALLDIR/bin/bash
export SHELL CONFIG_SHELL
cd $BUILDDIR || exit -1
make install || exit -1
# Move the coreutils 'stty' tool which doesn't do what we'd
# expect or want under irix
cd $INSTALLDIR/bin || exit -1
mv stty gcu-stty || exit -1
exit 0
