#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo "BUILDIR=$BUILDDIR"
echo "INSTALLDIR=$INSTALLDIR"
echo "EXTRAARGS=$EXTRAARGS"
. ./setupenv.sh
cd $BUILDDIR || exit -1
mkdir ../build-bash
cd ../build-bash
$BUILDDIR/configure --prefix=$GBSTEST_INSTALL_DIR --enable-readline --with-installed-readline --with-bash-malloc --with-curses --disable-nls --enable-job-control || exit -1
exit 0
