#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=c99
CFLAGS="$DIDBS_ARCH_CFLAGS -O1"
LDFLAGS="$DIDBS_ARCH_LDFLAGS"
PATH=$EXTRAARGS/bin:$PATH
LD_LIBRARY_PATH=$EXTRAARGS/lib:$PATH
export CC CFLAGS LDFLAGS PATH LD_LIBRARY_PATH
cd $BUILDDIR || exit -1
./configure --prefix=$INSTALLDIR || exit -1
exit 0
