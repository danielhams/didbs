#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=c99
CFLAGS="$DIDBS_ARCH_CFLAGS -I$INSTALLDIR/include -I$INSTALLDIR/include/nettle"
LDFLAGS="$DIDBS_ARCH_LDFLAGS -L$INSTALLDIR/lib"
LD_LIBRARY_PATH="$INSTALLDIR/lib"
PKG_CONFIG_PATH="$INSTALLDIR/lib/pkgconfig"
PERL=$INSTALLDIR/bin/perl
SHELL=$INSTALLDIR/bin/bash
CONFIG_SHELL=$INSTALLDIR/bin/bash
export CC CFLAGS LDFLAGS LD_LIBRARY_PATH PKG_CONFIG_PATH PERL SHELL CONFIG_SHELL
cd $BUILDDIR || exit -1
./Configure -des -Dprefix=$INSTALLDIR -Dusethreads || exit -1
exit 0
