#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cp ./tweakedconfig.sh $BUILDDIR/ || exit -1
cd $BUILDDIR || exit -1
perl -pi -e "s|DIDBSINSTALLPREFIX|${INSTALLDIR}|g" tweakedconfig.sh
cp tweakedconfig.sh config.sh
chmod u+x ./config.sh
./Configure -S || exit -1
exit 0
