#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit -1
mkdir ../build-nspr
cd ../build-nspr
$BUILDDIR/nspr/configure --prefix=$NSPR_INSTALL_DIR --libdir=$NSPR_INSTALL_DIR/$DIDBS_LIBDIR --with-mozilla --with-pthreads || exit -1
exit 0
