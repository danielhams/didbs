#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit -1
cd ..
mkdir build-bu
cd build-bu
$BUILDDIR/configure --prefix=$GBS4_0_INSTALL_DIR --libdir=$GBS4_0_INSTALL_DIR/$DIDBS_LIBDIR --enable-werror=no --disable-nls --disable-iconv --disable-gprof --with-system-zlib || exit -1

exit 0
