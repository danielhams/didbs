#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=$DIDBS_CC
CXX=$DIDBS_CXX
CFLAGS="$DIDBS_ARCH_CFLAGS -O1 -I${INSTALLDIR}/include"
CXXFLAGS="$DIDBS_ARCH_CXXFLAGS -O1 -I${INSTALLDIR}/include"
LDFLAGS="$DIDBS_ARCH_LDFLAGS -L${INSTALLDIR}/lib"
export CC CXX CFLAGS CXXFLAGS LDFLAGS
cd $BUILDDIR || exit -1
./configure --with-shared --with-gpm --enable-widec --prefix=$INSTALLDIR || exit -1
#./configure --with-shared --with-gpm --prefix=$INSTALLDIR || exit -1
exit 0
