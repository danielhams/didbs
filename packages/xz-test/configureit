#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo "BD = $BUILDDIR"
echo "ID = $INSTALLDIR"
echo "EA = $EXTRAARGS"
PWD=`pwd`
echo "Current working directory is $PWD"
. ./setupenv.sh
cd $BUILDDIR || exit -1
#autoreconf -fi || exit -1
./configure --prefix=$INSTALLDIR --enable-debug || exit -1
exit 0
