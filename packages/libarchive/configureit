#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit -1
#./configure --disable-bsdtar --disable-bsdcpio --disable-bsdcat --prefix=$INSTALLDIR || exit -1
./configure --disable-bsdcpio --disable-bsdcat --prefix=$INSTALLDIR || exit -1
exit 0
