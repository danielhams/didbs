#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit -1
echo "sgugver1.2$DIDBS_ISA" >gcc/DEV-PHASE || exit 1
# Rewrite the default ISA and ABI to what we want
cd gcc
if [ "ne$DIDBS_ISA" == "nemips4" ]; then
    REWRITE_REGEXP="s|MIPS_ISA_DEFAULT=3 MIPS_ABI_DEFAULT=ABI_N32|MIPS_ISA_DEFAULT=4 MIPS_ABI_DEFAULT=ABI_N32|"
else
    REWRITE_REGEXP="s|MIPS_ISA_DEFAULT=3 MIPS_ABI_DEFAULT=ABI_N32|MIPS_ISA_DEFAULT=3 MIPS_ABI_DEFAULT=ABI_N32|"
fi
perl -pi -e "$REWRITE_REGEXP" config.gcc
# Currently missing - may need to rewrite iris6.h too
cd $BUILDDIR/..
mkdir build-gcc
cd build-gcc
$BUILDDIR/configure --prefix=$GBS4_2_INSTALL_DIR --libdir=$GBS4_2_INSTALL_DIR/$DIDBS_LIBDIR --disable-silent-rules --disable-nls --disable-multilib --enable-obsolete --enable-languages=c,c++ --disable-bootstrap --enable-shared --enable-static --enable-threads=posix --disable-lto --with-gmp=$INSTALLDIR --with-mpfr=$INSTALLDIR --with-system-zlib --enable-checking=release --with-bugurl=$SGUG_URL || exit -1
exit 0
