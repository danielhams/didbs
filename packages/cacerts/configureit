#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit 1
mkdir -p build-cacerts
cd build-cacerts
$INSTALLDIR/bin/wget-static --no-check-certificate "http://anduin.linuxfromscratch.org/BLFS/other/certdata.txt"
SUM=`$INSTALLDIR/bin/sha256sum certdata.txt|cut -d " " -f 1`
echo "SUM=$SUM"
if [[ "ne$SUM" != "ne8523c638f04e0c19663070944e674853ce24e758665e07e94a48f664e5d20268" ]]; then
    echo "SHASUM of cert data failed! Refusing to continue"
    exit 1
fi

exit 0
