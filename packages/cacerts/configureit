#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
. ./setupenv.sh
cd $BUILDDIR || exit 1
mkdir -p build-cacerts
cd build-cacerts
wget "http://anduin.linuxfromscratch.org/BLFS/other/certdata.txt"
SUM=`sha256sum certdata.txt|cut -d " " -f 1`
echo "SUM=$SUM"
if [[ "ne$SUM" != "nee124a13fbdf9113f5299906cd90d5b2d65f63faac81b9bf739718b5d60cfc0d4" ]]; then
    echo "SHASUM of cert data failed! Refusing to continue"
    exit 1
fi

exit 0
