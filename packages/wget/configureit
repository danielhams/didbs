#!/bin/sh

BUILDDIR=$1
INSTALLDIR=$2
EXTRAARGS=$3
echo $BUILDDIR
echo $INSTALLDIR
echo $EXTRAARGS
CC=$DIDBS_CC
CFLAGS="$DIDBS_ARCH_CFLAGS -O1"
LDFLAGS="$DIDBS_ARCH_LDFLAGS"
export CC CFLAGS LDFLAGS
cd $BUILDDIR || exit -1
ac_cv_func_uuid_create=no ac_cv_header_uuid_h=no HAVE_UUID_CREATE=0 ./configure --prefix=$INSTALLDIR --with-ssl=openssl --without-libuuid || exit -1
exit 0
